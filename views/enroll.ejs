<% layout('layout') %>

<h2 class="text-3xl font-semibold mb-6">Matrícula de Novo Aluno</h2>

<form action="/enroll" method="POST" class="max-w-lg bg-white p-6 rounded shadow">
  <div class="mb-4">
    <label for="username" class="block mb-1 font-semibold">Nome de Usuário</label>
    <input type="text" id="username" name="username" required class="w-full border border-gray-300 rounded px-3 py-2" />
  </div>
  <div class="mb-4">
    <label for="password" class="block mb-1 font-semibold">Senha</label>
    <input type="password" id="password" name="password" required class="w-full border border-gray-300 rounded px-3 py-2" />
  </div>
  <div class="mb-4">
    <label for="course" class="block mb-1 font-semibold">Curso</label>
    <select id="course" name="course_id" required class="w-full border border-gray-300 rounded px-3 py-2">
      <% courses.forEach(course => { %>
        <option value="<%= course.id %>"><%= course.name %></option>
      <% }) %>
    </select>
  </div>
  <button type="submit" class="bg-blue-900 text-white px-4 py-2 rounded hover:bg-blue-800 transition">Matricular</button>
</form>

<% if (message) { %>
  <p class="mt-4 text-green-600 font-semibold"><%= message %></p>
<% } %>
<% if (error) { %>
  <p class="mt-4 text-red-600 font-semibold"><%= error %></p>
<% } %>
